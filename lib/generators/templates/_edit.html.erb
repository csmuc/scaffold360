  <ul class="actions">
    <li>
      <%% if request.xhr? %>
      <%%= link_to 'Destroy', @<%= singular_name %>, :confirm => 'Are you sure?', :method => :delete, :remote=>{:replace=>'.<%= singular_name %>_container'} %>
      <%% else %>
      <%%= link_to 'Destroy', @<%= singular_name %>, :confirm => 'Are you sure?', :method => :delete %> |
      <%% end %>
  	</li>
  </ul>
</div>

